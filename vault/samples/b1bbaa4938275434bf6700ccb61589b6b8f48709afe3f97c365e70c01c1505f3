	<script>
		function hepsinikapat(){
			document.getElementById("kasko_ok").setAttribute( "style", "visibility:hidden;"); 
			document.getElementById("trafik_ok").setAttribute( "style", "visibility:hidden;"); 
			document.getElementById("konut_ok").setAttribute( "style", "visibility:hidden;"); 
			document.getElementById("seyahat_ok").setAttribute( "style", "visibility:hidden;"); 
			document.getElementById("saglik_ok").setAttribute( "style", "visibility:hidden;"); 
		}
		function kaskosistem(){
			hepsinikapat();
			document.getElementById("panelim").setAttribute("style", "background:#F87912;");
			document.getElementById("kasko_ok").setAttribute( "style", "visibility:visible;float:left;font-size: 50px;margin-top:10px;color:#F87912;"); 
		}
		function trafiksistem(){
			hepsinikapat();
			document.getElementById("panelim").setAttribute("style", "background:#FFCC00;");
			document.getElementById("trafik_ok").setAttribute( "style", "visibility:visible;float:left;font-size: 50px;margin-top:10px;color:#FFCC00;"); 
		}
		function konutsistem(){
			hepsinikapat();
			document.getElementById("panelim").setAttribute("style", "background:#00CCCC;");
			document.getElementById("konut_ok").setAttribute( "style", "visibility:visible;float:left;font-size: 50px;margin-top:10px;color:#00CCCC;"); 
		}
		function seyahatsistem(){
			hepsinikapat();
			document.getElementById("panelim").setAttribute("style", "background:#196986;");
			document.getElementById("seyahat_ok").setAttribute( "style", "visibility:visible;float:left;font-size: 50px;margin-top:10px;color:#196986;"); 
		}
		function sagliksistem(){
			hepsinikapat();
			document.getElementById("panelim").setAttribute("style", "background:#EC2020;");
			document.getElementById("saglik_ok").setAttribute( "style", "visibility:visible;float:left;font-size: 50px;margin-top:10px;color:#EC2020;"); 
		}
	
	</script>
  
